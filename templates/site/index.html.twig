{% extends 'site/base.html.twig' %}

{% block title %}: Accueil{% endblock %}

{% block body %}

    <div class="container">

        <div class="row my-5">
            <div id="backgroundIndex" class="col-12">
                <h1>Boulangerie</h1>
            </div>
        </div>

        <div class="row my-5">
            <div class="col-12 d-flex flex-wrap justify-content-center">
                <h1 class="col-12 text-center mb-5">Quelque produits de la boutique</h1>
                {% for key, produit in produits %}
                    <div class="col-6 col-sm-4 col-lg-3 mb-2">
                        <div class="card col-11 mx-auto bg-primary py-3">
                            <div class="card-image col-10 mx-auto bg-success">
                                <div class="div-img-eboutique-card">
                                    {% if imagesProduits[key] | length > 0 %}
                                        <img src="data:image/jpeg;base64,{{ imagesProduits[key] }}"/>
                                    {% else %}
                                        <img src="{{ asset('images/site/default-product-image.png') }}" alt="Image à venir...">
                                    {% endif %}
                                </div>
                            </div>
                        </div>
                    </div>
                {% endfor %}
                <div class="col-12 text-center mt-5">
                    <a class="btn btn-info" href="{{ path('eboutique_accueil') }}">Voir la Eboutique</a>
                </div>
            </div>
        </div>


        <div class="row justify-content-between my-5 bg-primary p-3">
                <h1 class="col-12 text-center mb-5 text-white">Les actualités</h1>
                {% for key, blog in blogs %}
                    <div class="col-12 col-sm-6 mb-2 p-4 d-flex flex-wrap flex-row align-items-center h-100">
                        <div class="col-6 text-center">
                            <p class="text-muted h2">{{ monthsTranslate[blog.createdAt | date('F')] }}</p>
                            <p class="small text-muted">{{ blog.createdAt | date('d-m-Y') }}</p>
                        </div>
                        <div class="col-6 text-white border-bottom">
                            <p class="h3">{{ blog.titre }}</p>
                            <p>{{ blog.description }}</p>
                        </div>
                    </div>
                {% endfor %}
                <div class="col-12 text-center mt-4">
                    <a class="btn btn-info" href="{{ path('eboutique_accueil') }}">Voir toutes les actualités</a>
                </div>
            </div>
        </div>
   
{% endblock %}
