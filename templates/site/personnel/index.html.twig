{% extends 'site/base.html.twig' %}

{% block title %} : Notre personnel{% endblock %}

{% block body %}

    <h1 class="col-12 text-center my-5">Notre personnel</h1>

    <div class="row justify-content-md-around justify-content-lg-start">
        {% for personne in personnes %}
            
            <div class="col-6 col-md-5 col-lg-3 p-2">
                <div class="card h-100">
                    <div class="card-body">
                        <div class="col-9 mx-auto text-center">
                            <img class="col-12" src="{{ personne.picture.large }}">
                        </div>
                        <h5 class="card-title mt-3">{{ personne.name.title }} {{ personne.name.first }} {{ personne.name.last }}</h5>
                        <p class="card-text">{{ personne.location.city }}</p>
                        <p class="card-text">{{ personne.phone }}</p>
                        <p class="card-text">{{ personne.email }}</p>
                    </div>
                </div>
            </div>

        {% endfor %}

    </div>
{% endblock %}
